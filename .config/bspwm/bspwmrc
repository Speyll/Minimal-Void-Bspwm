#! /bin/sh

# Workspaces
bspc monitor -d I II III

# Compositor
pkill compton
compton &

# Lemonbar
#pkill lemonbar
#bar &

# Wallpaper settings
hsetroot -fill ~/Images/Wallpapers/Wallpaper.jpg &
#xwinwrap -ov -ni -fs -- mpv -vo x11 -wid WID --keepaspect=no --loop /home/lyes/Images/Wallpaper/wallpaper.gif &

# Border gaps settings
bspc config border_width         4
bspc config window_gap           12
bspc config top_padding          12
bspc config bottom_padding       12
bspc config left_padding         12
bspc config right_padding        12

# Workspaces settings
bspc rule -a 'tabbed surf -pe' desktop='^1'
bspc rule -a 'mpv' desktop='^3' center=on state=pseudo_tiled

# Colors settings
bspc config focused_border_color "#161623"
bspc config normal_border_color "#455173"
bspc config active_border_color "#7D97BB"
bspc config urgent_border_color "#EBCB8B"

# Split ratio and gapless monocle
bspc config split_ratio          0.52
bspc config single_monocle       true
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
