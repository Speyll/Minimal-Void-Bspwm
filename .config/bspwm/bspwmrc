#! /bin/sh

#  workspaces setup
bspc monitor -d I II III

# Lemonbar
pkill lemonbar | pkill bar | pkill sleep | pkill xtitle
#bar &

# Wallpaper setting
hsetroot -fill ~/Images/Wallpapers/Wallpaper.jpg &
#xwinwrap -ov -ni -fs -- mpv -vo x11 -wid WID --keepaspect=no --pause=no --loop ~/Images/Wallpapers/Wallpaper.gif &
#xwinwrap -ov -ni -fs -- sxiv -a -e WID -f -b -g 1366x768  ~/Images/Wallpapers/29.gif &

# Compositor
pkill compton
#compton &

# Border gaps settings
bspc config border_width         2
bspc config window_gap           10
bspc config top_padding          10
bspc config bottom_padding       10
bspc config left_padding         10
bspc config right_padding        10

# Workspaces settings
bspc rule -a 'tabbed surf -pe' desktop='^1'
bspc rule -a 'mpv' desktop='^3' center=on state=pseudo_tiled

# Colors settings
bspc config focused_border_color "#88C0D0"
bspc config normal_border_color "#455173"
bspc config active_border_color "#7D97BB"
bspc config urgent_border_color "#EBCB8B"

# Split ratio and gapless monocle
bspc config split_ratio          0.52
bspc config single_monocle       true
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
