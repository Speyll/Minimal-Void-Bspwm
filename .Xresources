! font settings
*.font: xft:Hack:style=Regular:size=12
*.boldFont: xft:Hack:style=Bold:size=12
*.italicFont: xft:Hack:style=Italic:size=12
*.boldItalicFont: xft:Hack:style=BoldItalic:size=12

Xft.hinting: false
Xft.autohint: false
Xft.rgba: true
Xft.lcdfilter: lcddefault

! urxvt settings
*.termName: rxvt-unicode-256color
*.scrollBar: false
*.scrollbar_right: false
*.internalBorder: 25
*.cursorBlink: true
*.fading: 35
*.depth: 35

! fake transparency
*.inheritPixmap: true
*.transparent: true
*.shading: 35

! nord colors
*.background:  #2E3440
*.foreground:  #D8DEE9
*.cursorColor: #81A1C1
*.fadeColor: #EBCB8B

! 8 normal colors
*.color0:  #3B4252
*.color1:  #BF616A
*.color2:  #A3BE8C
*.color3:  #EBCB8B
*.color4:  #81A1C1
*.color5:  #B48EAD
*.color6:  #88C0D0
*.color7:  #E5E9F0

! 8 bright colors
