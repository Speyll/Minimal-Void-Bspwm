! font settings
*.font: xft:terminus:style=Regular:size=9
*.boldFont: xft:terminus:style=Regular:size=9
*.italicFont: xft:terminus:style=Regular:size=9
*.boldItalicFont: xft:terminus:style=Regular:size=9

Xft.hinting: false
Xft.rgba: false
Xft.autohint: false
Xft.hintstyle: none
Xft.lcdfilter: lcddefault

! urxvt settings
URxvt.termName: rxvt-unicode-256color
URxvt.scrollBar: false
URxvt.scrollbar_right: false
URxvt.internalBorder: 25
URxvt.depth: 32
URxvt.cursorBlink: true
*.fading: 35
*.fadeColor: #EBCB8B

! fake transparency
URxvt.inheritPixmap: true
URxvt.transparent: true
URxvt.shading: 35

/*
! true transparency
URxvt.background: [80]#282828
